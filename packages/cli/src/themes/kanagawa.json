{
  "name": "kanagawa",
  "displayName": "Kanagawa",
  "author": "rebelot",
  "version": "2.0.0",
  
  "palette": {
    "purple": "#957FB8",
    "blue": "#7E9CD8",
    "codeBlue": "#736FF3",
    "cyan": "#7FB4CA",
    "green": "#98BB6C",
    "yellow": "#DCA561",
    "orange": "#FFA066",
    "red": "#E82424",
    "gray": "#727169",
    "darkGray": "#363646",
    "lightGray": "#54546D",
    "panelBg": "#2A2A37",
    "userMsgBg": "#2D2B3A",
    "diffAddedBg": "#2D4F2D",
    "diffRemovedBg": "#4F2D2D"
  },
  
  "colors": {
    "text": {
      "primary": "white",
      "secondary": "gray",
      "thinking": "gray",
      "inverse": "black"
    },

    "markdown": {
      "heading": "#19A34A",
      "inlineCode": "$codeBlue",
      "filePath": "$codeBlue"
    },
    
    "background": {
      "primary": "black",
      "panel": "$panelBg",
      "element": "$darkGray",
      "userMessage": "$userMsgBg"
    },
    
    "border": {
      "default": "gray",
      "active": "$yellow",
      "subtle": "$darkGray"
    },
    
    "brand": {
      "primary": "$purple",
      "secondary": "$blue",
      "accent": "$orange"
    },
    
    "status": {
      "error": "$red",
      "warning": "$yellow",
      "success": "$green",
      "info": "$cyan",
      "pending": "gray",
      "running": "$yellow"
    },
    
    "syntax": {
      "keyword": "$purple",
      "function": "$blue",
      "string": "$green",
      "number": "$orange",
      "comment": "gray",
      "type": "$cyan",
      "operator": "$yellow"
    },
    
    "diff": {
      "added": "$green",
      "removed": "$red",
      "context": "gray",
      "addedBg": "$diffAddedBg",
      "removedBg": "$diffRemovedBg"
    },
    
    "message": {
      "user": "$blue",
      "assistant": "$purple",
      "system": "gray"
    },
    
    "logo": {
      "primary": "$purple",
      "accent": "$blue"
    }
  }
}
